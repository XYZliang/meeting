/* pages/room/list.wxss */
page,
.page {
  height: 100%
}

.page {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
}

.head {
  background: #fff;
  display: -webkit-box;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.body {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  display: flex;
  width: 100%;
}

.foot {
  width: 100%;
  background: #fff;
}

.adContainer {
  width: 100%;
}

.weui-tab__panel {
  width: 100%;
  padding-top: 0;
}

.weui-tab__content {
  width: 100%;
}

.buttons {
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  display: flex;
}

.buttons button {
  width: 100%;
  margin: 0 10rpx;
}

.buttons .weui-btn {
  margin-top: 0;
}

@keyframes remindMessage {
  0% {
    -webkit-transform: translateX(100%);
  }

  100% {
    -webkit-transform: translateX(-320%);
  }
}

.tongzhitext {
  margin-right:80rpx;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tongzhi-text {
  font-size: 28rpx;
  animation: remindMessage 20s linear infinite;
  width: 100%;
  color: #d09868;
  display: block;
}

.notice-wrap {
  background: #ffebda;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #d09868;
  font-size: 28rpx;
}

.closeView {
  border: 1px white !important;
  background-color: white;
  border-radius: 50%;
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  right: 50rpx;
  top: 105rpx;
  text-align: center;
  font-size: 35rpx;
}